# --- Fonts ---
font-family = Hack
font-size = 12

# --- Window & Layout ---
# Removes the gray title bar to match urxvt's borderless look
gtk-titlebar = false

# Matches URxvt.internalBorder: 24
window-padding-x = 24
window-padding-y = 24

# Prevents text cropping in small i3 tiles by dynamic padding adjustment
window-padding-balance = true

# --- Cursor ---
# Forces the thick solid block you had in urxvt
cursor-style = block
# Prevents the shell from forcing the cursor into a skinny bar
shell-integration-features = no-cursor

cursor-style-blink = true

# --- Colors (Theming) ---
background = #02022f
foreground = #e3cae9

# NEW SYNTAX: Replaces bold-is-bright to fix prompt colors
bold-color = bright

