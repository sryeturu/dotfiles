cursor-scroll = ns-resize

enable-ipc = true


[module/cpu]
type = internal/cpu
interval = 3
format-prefix = "üñ•Ô∏è "
format-prefix-foreground = ${colors.text-color}
format-underline = ${colors.underline}

label = %percentage%% 
label-foreground =  ${colors.thing-color}



[module/date]
type = custom/script

interval = 1

exec = date +"%A, %B %d, %-I:%M %p"

format-underline = ${colors.underline}
label-foreground = ${colors.text-color}

click-left = exec gnome-calendar & disown


[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.text-color}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-foreground = ${colors.focused-window-label}
label-focused-background = ${colors.focused-window-background}
label-focused-underline= ${colors.underline}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-foreground = ${colors.unfocused-window-label}
label-unfocused-background = ${colors.background}
label-unfocused-padding = 2


; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-foreground = ${colors.focused-window-label}
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

[module/wlan]
type = internal/network
